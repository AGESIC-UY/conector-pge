<rich:toolBar
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:rich="http://richfaces.org/rich">
    <rich:toolBarGroup>
    	<h:outputLink value="#{facesContext.externalContext.requestContextPath}/pages/home.xhtml" ><h:outputText value="#{msg.home}"/></h:outputLink>   
    </rich:toolBarGroup>
    <!-- @newMenuItem@ -->
    <rich:toolBarGroup location="right">
		<h:form>
			<h:commandButton id="ConfGlobal" type="submit" action="#{globalConf.edit}" value="Configuracion Global" image="../img/config.png" rendered="#{connector.signedIn}">
			<rich:toolTip for="ConfGlobal" value="#{msg.configuracionGlobal}"/>
			</h:commandButton>
		</h:form>
		<h:outputLink value="#{facesContext.externalContext.requestContextPath}/fileDownload?type=type&amp;name=name&amp;typeFile=globalFile&amp;fileName=#{globalConf.condicionesUsoFileName}" id="link2" rendered="#{connector.signedIn}">
			<h:graphicImage value="../img/info.png"/>
	        <rich:toolTip for="link2" value="#{msg.condicionesUso}"/>
	        <!--  <rich:componentControl for="panel" attachTo="link" operation="show" event="onclick"/>-->
	    </h:outputLink>
		
		<h:outputLink value="#" id="link">
			<h:graphicImage value="../img/help.png"/>
	        <rich:toolTip for="link" value="#{msg.help}"/>
	        <rich:componentControl for="panel" attachTo="link" operation="show" event="onclick"/>
	    </h:outputLink>	
		
	    <h:form>
	        <h:outputText id="menuWelcomeId" value="#{msg.user} : " rendered="#{connector.signedIn}"/>
	        <h:outputText id="menuWelcomeId2" value="#{connector.loggedInUsername}" rendered="#{connector.signedIn}"/>
	        &#160;&#160;
			<h:outputLink value="#{facesContext.externalContext.requestContextPath}/logout.jsp" rendered="#{connector.signedIn}"><h:outputText value="#{msg.logout}"/></h:outputLink>
	    </h:form>
        
    </rich:toolBarGroup>
</rich:toolBar>
