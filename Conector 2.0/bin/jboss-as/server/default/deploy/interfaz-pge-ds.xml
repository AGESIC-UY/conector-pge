<?xml version="1.0" encoding="UTF-8"?>

<!-- The Derby embedded database JCA connection factory config
$Id: derby-ds.xml,v 1.1.4.1 2004/11/03 13:28:39 loubyansky Exp $ -->


<datasources>
   <local-tx-datasource>

      <!-- The jndi name of the DataSource, it is prefixed with java:/ -->
      <!-- Datasources are not available outside the virtual machine -->
      <jndi-name>InterfazPGEDS</jndi-name>

      <!-- for in-process persistent db, saved when jboss stops. The
      org.jboss.jdbc.DerbyDatabase mbean is necessary for properly db shutdown -->
      <connection-url>jdbc:derby:${jboss.server.data.dir}${/}derby${/}InterfazPGEDB</connection-url>

      <!-- The driver class -->
      <driver-class>org.apache.derby.jdbc.EmbeddedDriver</driver-class>

      <!-- The login and password -->
      <user-name>ipgeusr</user-name>
      <password>ipgepwd</password>

      <!-- The minimum connections in a pool/sub-pool. Pools are lazily constructed on first use -->
      <min-pool-size>5</min-pool-size>

      <!-- The maximum connections in a pool/sub-pool -->
      <max-pool-size>20</max-pool-size>

      <!-- The time before an unused connection is destroyed -->
      <idle-timeout-minutes>5</idle-timeout-minutes>

      <!-- Whether to check all statements are closed when the connection is returned to the pool,
           this is a debugging feature that should be turned off in production -->
      <track-statements></track-statements>

      <!-- This mbean can be used when using in process persistent derby -->
      <depends>jboss:service=DerbyPGE2</depends>
   </local-tx-datasource>

   <mbean code="org.jboss.jdbc.DerbyDatabase" name="jboss:service=DerbyPGE2">
      <attribute name="Database">InterfazPGEDB</attribute>	
   </mbean>
</datasources>

